---
import LayoutBase from "../layouts/LayoutBase.astro";

const titulo = "Sobre mi"
const info = {
    nombre: "yerri",
    apellido: "Chilcon Ramírez",
    edad: 22,
    hobbies: ["musica", "futbol", "programación", "voley"]
};
const skills = ["astro", "laravel", "php", "tailwind"];

const happy = true;
const finished = true;
const goals = 3;
---
<LayoutBase titulo={titulo}>
    <p>Acá me conoceras y te adentraras en mi mundo.</p>
    <p>Me llamo {info.nombre} {info.apellido} y tengo {info.edad} años</p>
    <p>Dos de mis hobbies son:
        {info.hobbies.length >= 2 && <li>{info.hobbies[0]} y {info.hobbies[1]}</li> }
    </p>
    <ul>
        {skills.map((skill) => <li>{skill}</li> )}
    </ul>

    {happy && <p>Estoy feliz</p> }
    {finished && <p>Termine el tutorial</p> }
    {goals === 3 ? <p>Lograre tres metas</p> : <p>No lograre las metas</p> }
</LayoutBase>
