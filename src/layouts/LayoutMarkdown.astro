---
import LayoutBase from "./LayoutBase.astro";
const {frontmatter} = Astro.props;
---

<LayoutBase titulo={frontmatter.title}>

    <p>Publicado el: {frontmatter.pubDate.toString().slice(0,10)}</p>    
    <p>Creado por: {frontmatter.author}</p>
    <p><em>{frontmatter.description}</em></p>
    <img src={frontmatter.image.url} width="300px" alt={frontmatter.image.alt}>

    <div class="tags">
        {frontmatter.tags.map((tag) => (
            <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
        ))}
    </div>

    <slot/>
</LayoutBase>
    

<style>
    a {
    color: #00539F;
    text-decoration: none;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>
